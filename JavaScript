document.getElementById('obituary-form').addEventListener('submit', function(e) {
    e.preventDefault();

    const name = document.getElementById('name').value;
    const date = document.getElementById('date').value;
    const style = document.getElementById('style').value;
    const music = document.getElementById('music').value;
    const wreath = document.getElementById('wreath').value;
    const message = document.getElementById('message').value;
    const funeralLocation = document.getElementById('funeral-location').value;
    const hall = document.getElementById('hall').value;
    const funeralDate = document.getElementById('funeral-date').value;

    const data = {
        name: name,
        date: date,
        style: style,
        music: music,
        wreath: wreath,
        message: message,
        funeralLocation: funeralLocation,
        hall: hall,
        funeralDate: funeralDate
    };

    localStorage.setItem('obituaryData', JSON.stringify(data));

    window.location.href = 'inner-page.html';
});

document.getElementById('funeral-location').addEventListener('change', function() {
    const selectedLocation = document.getElementById('funeral-location').value;
    const hallSelect = document.getElementById('hall');
    hallSelect.disabled = false;
    
    hallSelect.innerHTML = '';

    if (selectedLocation === '第二殯儀館') {
        const option1 = document.createElement('option');
        option1.value = '至仁一廳';
        option1.textContent = '至仁一廳';
        hallSelect.appendChild(option1);
    } else if (selectedLocation === '新北板橋殯儀館') {
        const option1 = document.createElement('option');
        option1.value = '某某廳';
        option1.textContent = '某某廳';
        hallSelect.appendChild(option1);
    }
});
